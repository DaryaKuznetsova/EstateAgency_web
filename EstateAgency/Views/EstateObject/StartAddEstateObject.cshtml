@using EstateAgency.ViewModel;

@model EstateObjectViewModel

@{
    ViewBag.Title = "StartAddEstateObject";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>Создание объекта недвижимости</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.RealtyType, "Тип недвижимости", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.RealtyTypeId, Model.RealtyTypes as List<SelectListItem>, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RealtyType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Далее" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>



